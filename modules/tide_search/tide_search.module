/**
 * Implements after build for tide search listings.
 */
function _tide_search_form_node_form_after_build(array $form, FormStateInterface $form_state) {
  $current_user = \Drupal::currentUser();
  $admin_roles = ['administrator', 'site_admin'];

  // Self service search listing.
  $non_admin = !array_intersect($admin_roles, $current_user->getRoles());
  if ($non_admin) {
    $groups = [
      'group_listing_configuration',
      'group_global_filters',
      'group_user_filters',
      'group_results',
    ];
    $restricted_items = [
      'field_listing_query_config',
      'field_search_submit_label',
      'field_listing_results_config',
      'field_search_configuration',
      'field_landing_page_c_secondary',
      'field_layout_component',
      'field_results_component',
      'group_custom_header',
    ];
    foreach ($restricted_items as $field_name) {
      $form[$field_name]['#access'] = FALSE;
    }
    foreach ($groups as $group) {
      if (isset($form[$group])) {
        $form[$group]['#open'] = TRUE;
      }
    }
    // Hide global & user filter's custom filter paragraph.
    $targets = [
      'field_listing_global_filters' => 'add_more_button_listing_custom_filter',
      'field_listing_user_filters'   => 'add_more_button_listing_user_custom_filter',
    ];
    foreach ($targets as $field => $button) {
      if (isset($form[$field]['widget']['add_more'][$button])) {
        unset($form[$field]['widget']['add_more'][$button]);
      }
    }
    // Collapsed by default.
    $wrappable_fields = [
      'field_above_results_content' => 'Above results content',
      'field_below_results_content' => 'Below results content',
      'field_featured_image'        => 'Featured image',
    ];

    foreach ($wrappable_fields as $field_name => $title) {
      if (isset($form[$field_name])) {
        $form["{$field_name}_wrapper"] = [
          '#type' => 'details',
          '#title' => $title,
          '#open' => FALSE,
          '#weight' => $form[$field_name]['#weight'] ?? 0,
        ];

        // Move field inside wrapper.
        $form["{$field_name}_wrapper"][$field_name] = $form[$field_name];

        // Remove the original.
        unset($form[$field_name]);
      }
    }
  }
  // Remove default paragraph types.
  $node = $form_state->getFormObject()->getEntity();
  if ($node->isNew() && !$non_admin) {
    $fields_to_clean = [
      'field_listing_global_filters' => [0, 1],
      'field_listing_user_filters'   => [0],
    ];

    foreach ($fields_to_clean as $field_name => $deltas) {
      if (!empty($form[$field_name]['widget'])) {
        foreach ($deltas as $delta) {
          unset($form[$field_name]['widget'][$delta]);
        }
      }
    }
  }
  // Non admin field only.
  $form['field_listing_result_type']['#access'] = !$non_admin ? FALSE : TRUE;

  return $form;
}

/**
 * Implements hook_entity_presave().
 */
function tide_search_entity_presave(EntityInterface $entity) {
  // Self service search listing.
  $current_user = \Drupal::currentUser();
  $admin_roles = ['administrator', 'site_admin'];
  $admin = array_intersect($admin_roles, $current_user->getRoles());
  // Only set field values for non admins.
  if ($admin) {
    return;
  }
  if ($entity->getEntityTypeId() === 'node' && $entity->bundle() === 'tide_search_listing') {
    $result_type = $entity->get('field_listing_result_type')->value;

    if ($result_type) {
      // Mapping of result type to dependent fields.
      $mapping = [
        'standard' => [
          'layout' => 'TideSearchResultsGrid',
          'results' => 'TideSearchResult',
        ],
        'grants' => [
          'layout' => 'TideSearchResultsList',
          'results' => 'TideGrantSearchResult',
        ],
        'card' => [
          'layout' => 'TideSearchResultsGrid',
          'results' => 'TideSearchResultCard',
        ],
      ];

      if (isset($mapping[$result_type])) {
        $map = $mapping[$result_type];

        // Lookup taxonomy terms by name.
        $layout_term = \Drupal::entityTypeManager()->getStorage('taxonomy_term')->loadByProperties([
          'name' => $map['layout'],
          'vid' => 'listing_layout_comp_taxonomy',
        ]);
        $results_term = \Drupal::entityTypeManager()->getStorage('taxonomy_term')->loadByProperties([
          'name' => $map['results'],
          'vid' => 'listing_results_comp_taxonomy',
        ]);

        // Get the first term ID found.
        $layout_tid = $layout_term ? reset($layout_term)->id() : NULL;
        $results_tid = $results_term ? reset($results_term)->id() : NULL;

        // Set entity reference fields.
        if ($layout_tid) {
          $entity->set('field_layout_component', ['target_id' => $layout_tid]);
        }
        if ($results_tid) {
          $entity->set('field_results_component', ['target_id' => $results_tid]);
        }
      }
    }
  }
}

/**
 * Helper function to prefill form field values based on query preset.
 *
 * @param array $form
 *   The node form array (passed by reference).
 */
function _tide_search_apply_preset_values(array &$form, FormStateInterface $form_state) {
  $preset = \Drupal::request()->query->get('preset');
  if (!$preset) {
    return;
  }

  // Sort configuration mapping.
  $sort_map = [
    'news'         => '[{ "field_news_date": "desc" }]',
    'publications' => '[{ "field_publication_date": "desc" }]',
    'grants'       => '[{ "field_node_dates_end_value": "desc" }]',
    'events'       => '[{ "field_event_date_start_value": "asc" }]',
    'landing_page' => '[{ "created": "desc" }]',
  ];

  // Apply sort configuration.
  if (isset($sort_map[$preset]) && isset($form['field_custom_sort_configuration'])) {
    $form['field_custom_sort_configuration']['widget'][0]['value']['#default_value'] = $sort_map[$preset];
  }

  // Query configuration mapping.
  $query_fields = [
    'field_landing_page_nav_title',
    'field_landing_page_summary',
    'field_landing_page_intro_text',
    'field_news_intro_text',
    'field_paragraph_body',
    'field_overview_title',
    'summary_processed',
    'title',
    'body',
  ];

  // Apply query configuration.
  if ($preset && isset($form['field_listing_query_config'])) {
    $query_config_value = [
      'multi_match' => [
        'query' => '{{query}}',
        'fields' => $query_fields,
      ],
    ];
    // Encode as JSON and set as default value.
    $form['field_listing_query_config']['widget'][0]['value']['#default_value'] = json_encode($query_config_value);
  }

  // Page title mapping.
  $title_map = [
    'news'         => 'Create news search listing',
    'publications' => 'Create publications search listing',
    'grants'       => 'Create grants search listing',
    'events'       => 'Create events search listing',
    'landing_page' => 'Create landing page search listing',
  ];

  // Apply page title.
  if (isset($title_map[$preset])) {
    $form['#title'] = $title_map[$preset];
  }

  // Mapping preset → content type machine name.
  $content_type_map = [
    'news'         => 'news',
    'publications' => 'publication',
    'grants'       => 'grant',
    'events'       => 'event',
    'landing_page' => 'landing_page',
  ];

  if (!empty($preset) && isset($content_type_map[$preset])) {
    // Make sure the paragraph widget exists before trying to set defaults.
    if (isset($form['field_listing_global_filters']['widget'][0]['subform']['field_listing_global_contenttype']['widget'])) {
      $form['field_listing_global_filters']['widget'][0]['subform']['field_listing_global_contenttype']['widget']['#default_value'] = [$content_type_map[$preset]];
    }
  }

  // Map presets to field_listing_result_type values.
  $result_type_map = [
    'events'       => 'card',
    'grants'       => 'grants',
    'landing_page' => 'standard',
    'news'         => 'card',
    'publications' => 'card',
  ];

  // Set the value for result type.
  if (isset($result_type_map[$preset]) && isset($form['field_listing_result_type'])) {
    $form['field_listing_result_type']['widget']['#default_value'][0] = $result_type_map[$preset];
  }

  // Set results per page: based on preset.
  if (isset($form['field_listing_results_per_page'])) {
    $per_page = in_array($preset, ['grants', 'landing_page'], TRUE) ? 10 : 12;
    $form['field_listing_results_per_page']['widget'][0]['value']['#default_value'] = $per_page;
  }
}

/**
 * Implements hook_theme().
 */
function tide_search_theme($existing, $type, $theme, $path) {
  return [
    'node_add_list__non_admin' => [
      'template' => 'node-add-list--non-admin',
      'base hook' => 'node_add_list',
    ],
  ];
}

/**
 * Implements hook_theme_suggestions_HOOK().
 */
function tide_search_theme_suggestions_node_add_list(array $variables) {
  $suggestions = [];
  $current_user = \Drupal::currentUser();
  $admin_roles = ['administrator', 'site_admin'];
  $admin = array_intersect($admin_roles, $current_user->getRoles());
  if (!$admin) {
    $suggestions[] = 'node_add_list__non_admin';
  }

  return $suggestions;
}
